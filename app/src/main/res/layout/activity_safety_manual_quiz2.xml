<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/quiz2_textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="안전 메뉴얼 퀴즈"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="@color/black" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/quiz2_textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="입장 시 체크사항" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/quiz2_textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="위급 상황이 생기면 누구에게 먼저 알려야 할까요?"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="19sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/quiz2_radioButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="동료" />

                <RadioButton
                    android:id="@+id/quiz2_radioButton1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="관리자" />
            </RadioGroup>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/quiz2_textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이동할 땐 어느쪽으로 해야 할까요?"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/quiz2_radioButton3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="오른쪽" />

                <RadioButton
                    android:id="@+id/quiz2_radioButton4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="왼쪽" />
            </RadioGroup>

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <Button
                android:id="@+id/quiz2_button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="완료" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/quiz2_textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>