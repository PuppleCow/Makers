<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateAnnouncementActivity">

    <TextView
        android:id="@+id/create_announcement_create_announcement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" 공지사항 작성"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <EditText
        android:id="@+id/create_announcement_editText_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="제목을 입력해주세요"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/create_announcement_editTextTextMultiLine"
        android:layout_width="match_parent"
        android:layout_height="384dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="공지사항을 입력해주세요"
        android:inputType="textMultiLine" />

    <CheckBox
        android:id="@+id/create_announcement_checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="필독" />


    <ImageView
        android:id="@+id/create_announcement_imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/create_announcement_button_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="사진첨부" />

        <Button
            android:id="@+id/create_announcement_button_enroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="등록하기" />

    </LinearLayout>

</LinearLayout>