<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#F6F6F8"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/checkin_textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#673AB7"
                android:text="비대면 체크인"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/white"
                android:textSize="34sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/check_in_textView5"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="헬멧 착용하셨나요? " />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/check_in_radioButton5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="네" />

                    <RadioButton
                        android:id="@+id/check_in_radioButton6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="아니요" />
                </RadioGroup>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/check_in_textView4"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="2주 이내 해외 방문 한 적이 있나요? " />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/check_in_radioButton3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="네" />

                    <RadioButton
                        android:id="@+id/check_in_radioButton4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="아니요" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#03A9F4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/check_in_textView3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="호흡곤란,기침, 인후통,미각/후각 상실 증상이 있나요? " />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/check_in_radioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="네" />

                    <RadioButton
                        android:id="@+id/check_in_radioButton2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="아니요" />
                </RadioGroup>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/check_in_button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="안전 매뉴얼 퀴즈로 이동" />

</LinearLayout>