<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.manager.home.ManagerWorkerInfoActivity">

    <TextView
        android:id="@+id/manager_workerinfo_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="홍길동님의 정보"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <ImageView
        android:id="@+id/manager_workerinfo_imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/manager_workerinfo_text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이름 : " />

    <TextView
        android:id="@+id/manager_workerinfo_text_startT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="오늘 작업 시작시간" />

    <TextView
        android:id="@+id/manager_workerinfo_text_finishT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="오늘작업 종료시간" />

    <TextView
        android:id="@+id/manager_workerinfo_text_phoneNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="전화번호 : " />

    <TextView
        android:id="@+id/manager_workerinfo_text_emergency_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="보호자 연락처 : " />

    <TextView
        android:id="@+id/manager_workerinfo_text_blood_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="혈액형 : " />

    <TextView
        android:id="@+id/manager_workerinfo_text_special_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="특이사항 : " />

    <Button
        android:id="@+id/manager_workerinfo_button_emergency_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="보호자 연락처로 전화걸기" />

    <TextView
        android:id="@+id/manager_workerinfo_text_text_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="뉴스" />

</LinearLayout>