<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/manager_home_manager_home_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosans_bold"
        android:text="홈"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="오늘도 안전한 하루 되세요" />

    <Spinner
        android:id="@+id/manager_home_SelectGroupSp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="gravity" />

    <Spinner
        android:id="@+id/manager_home_electNotifSp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/manager_home_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/manager_home_Emergency_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="긴급 알림" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/manager_home_workerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/transfarent_button"
            android:text="근무자 현황" />

        <Button
            android:id="@+id/manager_home_complaint_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:text="민원목록" />
    </LinearLayout>


    <TextView
        android:id="@+id/manager_home_text_news"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#E0E0E0"
        android:backgroundTint="#E0E0E0"
        android:fontFamily="@font/notosans_bold"
        android:paddingTop="15dp"
        android:text="최신 안전 뉴스 바로가기"
        android:textAlignment="center"
        android:textColor="#575756"
        android:textSize="20dp" />
</LinearLayout>