<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActicity1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosans_bold"
        android:text="회원가입"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/register_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이름"
        android:fontFamily="@font/notosans_medium"
        />

    <EditText
        android:id="@+id/register_name_input"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="이름을 입력해주세요" />

    <TextView
        android:id="@+id/register_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주민등록번호"
        android:fontFamily="@font/notosans_medium"
        />

    <EditText
        android:id="@+id/register_id_input"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:maxLength="13"
        android:inputType="number"
        android:hint="주민등록번호를 입력해 주세요." />

    <TextView
        android:id="@+id/register_text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosans_medium"
        android:text="휴대폰 번호" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/register_cellPhoneNumber_input"
            android:layout_width="276dp"
            android:layout_height="40dp"
            android:inputType="phone"
            android:maxLength="11"
            android:text="010" />

        <android.widget.Button
            android:id="@+id/register_id_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mybutton"
            android:fontFamily="@font/notosans_bold"
            android:text="인증번호 받기"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/register_text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="인증번호"
        android:fontFamily="@font/notosans_medium"
        />

    <EditText
        android:id="@+id/register_number_input"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="number"
        android:hint="인증번호를 입력해주세요." />

    <TextView
        android:id="@+id/register_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/design_default_color_error" />

    <android.widget.Button
        android:id="@+id/register_button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton"
        android:fontFamily="@font/notosans_bold"
        android:text="다음"
        android:textColor="@color/white" />

</LinearLayout>