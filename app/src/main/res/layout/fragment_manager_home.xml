<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/manage_SelectGroupSp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="gravity" />

    <Spinner
        android:id="@+id/manage_SelectNotifSp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/manage_Emergency_button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="긴급 알림" />

    <Button
        android:id="@+id/manage_workerButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="근무자 현황" />

    <Button
        android:id="@+id/manage_NotifListButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="공지사항 목록 보기" />
</LinearLayout>