<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stroke"
    android:orientation="vertical"
    tools:context=".ui.manager.announcement.ManagerAnnouncementActivity">

    <TextView
        android:id="@+id/announcement_announcement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosans_bold"
        android:text="공지사항"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/announcement_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="공지제목" />

        <TextView
            android:id="@+id/announcement_text_must_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:textAlignment="viewEnd"
            android:textColor="@color/design_default_color_error" />
    </LinearLayout>

    <ImageView
        android:id="@+id/announcement_imageView"
        android:layout_width="match_parent"
        android:layout_height="167dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/announcement_text_content"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="공지내용" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/announcement_button_edit"
            android:layout_width="52dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/stroke"

            android:text="수정"
            android:textColor="#422A81" />

        <Button
            android:id="@+id/announcement_button_delete"
            android:layout_width="52dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@drawable/stroke"
            android:text="삭제 "
            android:textColor="#422A81" />

        <Button
            android:id="@+id/announcement_button_list"
            android:layout_width="52dp"
            android:layout_height="40dp"
            android:layout_marginStart="220dp"
            android:background="@drawable/round"
            android:backgroundTint="#422A81"
            android:text="목록"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <TextView
        android:id="@+id/announcement_text_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />
</LinearLayout>