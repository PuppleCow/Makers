<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateAnnouncementActivity">

    <TextView
        android:id="@+id/create_announcement_create_announcement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="민원접수" />

    <Spinner
        android:id="@+id/create_announcement_spinner_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/create_announcement_editTextTextMultiLine"
        android:layout_width="match_parent"
        android:layout_height="384dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/create_announcement_button_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="사진첨부" />

        <Button
            android:id="@+id/create_announcement_button_enroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="등록하기" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/create_announcement_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="86dp"
        android:layout_weight="1"
        android:text="필독" />

</LinearLayout>