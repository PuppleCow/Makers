<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.complaint.ComplaintActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />


    <TextView
        android:id="@+id/complaint_complaint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosans_bold"
        android:text="민원접수"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"></View>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <Spinner
        android:id="@+id/complaint_spinner_category"
        android:layout_width="match_parent"
        android:layout_height="38dp" />

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"></View>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <EditText
        android:id="@+id/complaint_editText_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/notosans_medium"
        android:hint="제목을 입력해주세요"
        android:inputType="textPersonName" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <EditText
        android:id="@+id/complaint_editTextTextMultiLine"
        android:layout_width="match_parent"
        android:layout_height="384dp"
        android:ems="10"
        android:fontFamily="@font/notosans_medium"
        android:gravity="start|top"
        android:hint="민원 내용을 입력해주세요"
        android:inputType="textMultiLine" />

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/complaint_imageView"
            android:layout_width="133dp"
            android:layout_height="49dp"
            android:layout_weight="1"
            tools:srcCompat="@drawable/eye_open" />

        <Button
            android:id="@+id/complaint_button_image_delete"
            android:layout_width="22dp"
            android:layout_height="19dp"
            android:background="@drawable/ic_baseline_delete_forever_24"
            android:backgroundTint="@color/black" />

    </LinearLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"></View>

    <Button
        android:id="@+id/complaint_button_enroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_422a81"
        android:fontFamily="@font/notosans_medium"
        android:text="등록" />

