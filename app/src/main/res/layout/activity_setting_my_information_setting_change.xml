<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/setting2_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_bold"
                android:text="기본정보"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textColor="#1A1A1A"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp" />

            <EditText
                android:id="@+id/setting2_change_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button_color_422a81"
                android:ems="10"
                android:hint="이름"
                android:inputType="textPersonName" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <EditText
                android:id="@+id/setting2_change_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button_color_422a81"
                android:ems="10"
                android:hint="생년월일"
                android:inputType="phone" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/setting2_change_write_phone"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/button_color_422a81"
                    android:ems="10"
                    android:hint="010-"
                    android:inputType="phone" />

                <android.widget.Button
                    android:id="@+id/setting2_change_get_number"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/transfarent_button"
                    android:backgroundTint="@android:color/darker_gray"
                    android:fontFamily="@font/notosans_bold"
                    android:text="인증번호 받기"
                    android:textColor="@color/main_color"
                    android:textSize="12dp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <EditText
                android:id="@+id/setting2_change_compare_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button_color_422a81"
                android:ems="10"
                android:hint="인증번호"
                android:inputType="phone" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/setting2_change_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round"
                android:backgroundTint="@color/button_color_422a81"
                android:text="완료"
                android:textColor="@color/white" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>

